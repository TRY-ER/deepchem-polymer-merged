; RUN CONTROL PARAMETERS
integrator  = steep
nsteps      = 5000
emtol       = 10.0
emstep      = 0.01

; NEIGHBORSEARCHING PARAMETERS
cutoff-scheme = Verlet
nstlist       = 10
ns_type       = grid
pbc           = xyz
verlet-buffer-tolerance = 0.005

; COULOMB & VDW (CRITICAL FOR MARTINI)
coulombtype   = Reaction-Field 
rcoulomb      = 1.1
epsilon_r     = 15    ; 15 for standard Martini water
vdw_type      = Cut-off
vdw-modifier  = Potential-shift-verlet
rvdw          = 1.1
